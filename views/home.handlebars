<div class="container">
        <div class="row">
            <div class="col-12 jumbotron">
                <div class="text-center">
                    <h2>
                        Scrape NYTimes latest news  
                    </h2>
                    <h3>
                        MongoDb 
                    </h3>
                </div>
                   
            </div>
        </div>
    </div>


{{#each headline}} 
        <div class="container">
            {{#unless saved}}    
            <div class="row">
                <div class="col-md-12">
                <div class='card'>
                        <div class='card-block'>
                            <div class='card-header row '>
                                <div class="mx-auto col-9"  >
                                    
                                    <a  href="http://www.latimes.com{{{link}}}.html">{{title}}</a>
                                </div>
                                <div class=" text-right col-3" >
                                     <button data-id={{_id}} class="btn btn-success mx-1 mb-1 saveBtn" data-toggle="modal" data-target="#showComment">Save Article</button>
                                    
                                   
                                </div>
                            </div>
                            <div class="card-body row">



                                <div class="col-4">
                                    {{#if img}}
                                        <img  class="showImg" src="{{img}}"> 
                                    {{/if}} 
                                    {{#unless img}}
                                        <img class="showImg"  src="/assets/images/Photo-Unavailable.jpg"> 
                        
                                    {{/unless}}
                                </div>
                        
                                <div class="col-8">
                                    {{#if summary}}
                                        <p class='card-text p-3'>
                                            {{summary}}
                                        </p>
                                    {{/if}}
                                    {{#unless summary}}
                                        <p>
                                         We're sorry. Looks like there is no brief summary available from The Los Angeles 
                                        Times. If you'd like to read more know more about this, please click the title above 
                                        and you will be redirected to the story. Thanks for understanding.
                                        </p>
                                    {{/unless}}
                                </div>


                                   {{!-- <img>
                                    <p class='card-text p-3 col-md-9'>zdcdsfsdfdsfdsfds</p> --}}
                              
                                    
                                    
                            </div>
            </div>
            </div>
        </div>
        </div> 
            {{/unless}} 
    </div>

     {{/each}}

